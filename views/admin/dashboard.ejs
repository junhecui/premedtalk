<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button">+ Add New</a>
</div>

<ul class="admin-posts">
  <% data.forEach(post => { %>
      <li>
          <a href="/post/<%= post._id %>" aria-label="View <%= post.title %>">
              <%= post.title %> &nearr;
          </a>
          <div class="admin-post-controls">
              <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

              <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?');">
                  <input type="submit" value="Delete" class="btn-delete btn" aria-label="Delete <%= post.title %>">
              </form>
          </div>
      </li>
  <% }) %>
</ul>
