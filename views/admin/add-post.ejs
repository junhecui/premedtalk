<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PreMedTalk</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/add-post.css">
    <!-- Load the bundled JavaScript file generated by Webpack -->
    <script src="/js/bundle.js"></script>
</head>
<body>
    <div class="content-wrapper">
        <a href="/dashboard" aria-label="Back to dashboard">&larr; Back</a>
        <div class="admin-title">
            <h2>Add New Post</h2>
        </div>
        <form action="/add-post" method="POST" enctype="multipart/form-data">
            <label for="title"><b>Title</b></label>
            <input type="text" id="title" name="title" required>

            <label for="postBody"><b>Content</b></label>

            <div class="editor-toolbar">
                <button type="button" id="bold-btn">Bold</button>
                <button type="button" id="italic-btn">Italic</button>
                <button type="button" id="heading-btn">Heading</button>
                <button type="button" id="center-btn">Center</button>
                <button type="button" id="left-btn">Left Align</button>
                <button type="button" id="right-btn">Right Align</button>
                <!-- Input for custom font size -->
                <label for="font-size-input">Font Size:</label>
                <input type="number" id="font-size-input" min="8" max="72" placeholder="Size (px)">

                <!-- Input for custom color -->
                <label for="color-input">Text Color:</label>
                <input type="color" id="color-input">
                <button type="button" id="image-btn">Insert Image</button>
              </div>
              

            <div id="editor"></div>
            <textarea id="postBody" name="body" hidden required></textarea>

            <input type="submit" value="Add" class="btn">
        </form>
    </div>
</body>
</html>